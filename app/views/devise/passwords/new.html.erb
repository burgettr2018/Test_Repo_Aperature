<% digital_data(global: {pageSection: 'forgot password'}) %>
<div id="main_content" data-section="" data-page="">
	<div class="container">
		<div class="white-wrap">
			<div class="row">
				<div class="col-sm-12">
					<div class="page-header">
						<h1><%= t('devise.passwords.new.forgot_password_upper') %></h1>
					</div>
        </div>
			</div>
			<div class="row">
				<div class="col-sm-6 col-md-4">
					<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					  <!--<%= f.error_notification %>-->

					  <div class="form-inputs">
						<%= f.input :email, required: true, autofocus: true, label: t('devise.shared.email') %>
					  </div>

					  <div class="form-actions">
						  <%= f.button :button, class: 'btn btn-primary' do %>
						    <%= t('devise.passwords.new.send_reset_instructions') %>
						  <% end %>
					  </div>

					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
