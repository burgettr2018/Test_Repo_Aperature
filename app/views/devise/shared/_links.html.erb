<% if controller_name != 'sessions' %>
  <%= link_to t('devise.shared.log_in'), new_session_path(resource_name) %><br />
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.shared.forgot_password_lower'), new_password_path(resource_name) %><br />
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.shared.did_not_receive_confirmation_instructions'), new_confirmation_path(resource_name) %><br />
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.shared.did_not_receive_unlock_instructions'), new_unlock_path(resource_name) %><br />
<% end %>

