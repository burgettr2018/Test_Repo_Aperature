<% digital_data(global: {pageSection: 'sso'}) %>
<div id="main_content" data-section="" data-page="">
  <div class="container">
    <div class="white-wrap">
      <div class="row">
        <div class="col-sm-12">
          <div class="page-header">
            <h1><%= @title %></h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <p class="h2">
            Congratulations!!!
            <%= image_tag('ui/popper1end.gif', id: 'popper', size: "100x100", style: "margin-top: -40px") %>
          </p>
          <p>
            <%= @message %>
          </p>
          <% if @sso_details.present? %>
              <p>
                <table class="table-striped table-bordered">
                  <thead>
                    <tr>
                      <th></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @sso_details.each do |k,v| %>
                      <tr>
                        <td><%= k%></td>
                        <td><%= v%></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </p>
          <% end %>
          <p>
            <a href='javascript:history.back(1);'>Go back</a>
          </p>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    $('#popper').on('click', function() {
      $(this).attr('src', '<%= image_url('ui/popper1end.gif') %>?a='+Math.random())
    })
  </script>
</div>