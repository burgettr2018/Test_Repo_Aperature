<% digital_data(global: {pageSection: 'invitation'}) %>
<div id="main_content" data-section="" data-page="">
  <div class="container">
    <div class="white-wrap">
      <div class="row">
        <div class="col-sm-12">
          <div class="page-header">
            <h1><%= t('devise.passwords.edit.change_your_password') %></h1>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-md-4">
          <%= simple_form_for(@user, url: put_accept_invitation_path, html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <div class="form-inputs">
                <%= f.input :password, hint: t('devise.passwords.edit.new_password_hint'), label: t('devise.passwords.edit.new_password'), required: true, autofocus: true %>
                <%= f.input :password_confirmation, label: t('devise.passwords.edit.confirm_new_password'), required: true %>
              </div>
            <%= f.hidden_field :token, value: params[:token] %>
            <%= hidden_field_tag :initiated, value: Time.now.utc %>
              <div class="form-actions">
                <%= f.button :button, class: 'btn btn-primary' do %>
                    <%= t('devise.passwords.edit.change_my_password') %>
                <% end %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>