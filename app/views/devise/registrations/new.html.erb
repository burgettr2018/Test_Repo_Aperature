<% digital_data(global: {pageSection: 'register'}) %>
<div id="main_content" data-section="" data-page="">
	<div class="container">
		<div class="white-wrap">
			<div class="row">
				<div class="col-sm-12">
					<div class="page-header">
						<h1><%= t('devise.registrations.new.sign_up') %></h1>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-6 col-md-4">
					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					  <%= f.error_notification %>

					  <div class="form-inputs">
						  <%= f.input :email, required: true, autofocus: true, label: t('devise.shared.email') %>
              <%= f.input :password, hint: t('devise.passwords.edit.new_password_hint'), required: true, label: t('devise.shared.password'), hint: ("#{@minimum_password_length} #{t('devise.registrations.new.characters_minimum')}" if @validatable) %>
						  <%= f.input :password_confirmation, required: true, label: t('devise.shared.password_confirmation') %>
					  </div>

					  <div class="form-actions">
						  <%= f.button :button, class: 'btn btn-primary' do %>
                <%= t('devise.registrations.new.sign_up') %>
						  <% end %>
					  </div>
					<% end %>
				</div>
			</div>
			<div class="row mtl">
				<div class="col-sm-12">
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>
