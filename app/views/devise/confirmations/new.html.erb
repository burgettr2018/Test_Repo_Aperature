<% digital_data(global: {pageSection: 'confirm'}) %>
<div id="main_content" data-section="" data-page="">
	<div class="container">
		<div class="white-wrap">
			<div class="row">
				<div class="col-sm-12">
					<div class="page-header">
						<h1><%= t('devise.confirmations.new.resend_confirmation_instructions') %></h1>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-6 col-md-4">
					<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
					  <%= f.error_notification %>
              <span class="has-error"><%= f.full_error :confirmation_token %></span>

					  <div class="form-inputs">
						<%= f.input :email, required: true, autofocus: true, label: t('devise.shared.email') %>
					  </div>


						<div class="form-actions">
							<%= f.button :button, class: 'btn btn-primary' do %>
                  <%= t('devise.confirmations.new.resend_instructions') %>
							<% end %>
						</div>
					<% end %>
				</div>
			</div>
			<div class="row mtl">
				<div class="col-sm-12">
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
	</div>
</div>

