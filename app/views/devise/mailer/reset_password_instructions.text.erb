<% if @resource.is_database_provider %>
<%= t('devise.shared.hello') %> <%= @resource.email %>!

<%= t('devise.mailers.reset_password_instructions.requested_password_change') %>

<%= edit_password_url(@resource, reset_password_token: @token) %>

<%= t('devise.mailers.reset_password_instructions.if_not_requesting') %>
<%= t('devise.mailers.reset_password_instructions.create_new_password_instructions') %>
<% else %>
<% provider_name = OmniAuth::Utils.camelize(@resource.provider) %>
<% provider_name = SamlIdentityProvider.where(token: @resource.provider).first.try(:name) || provider_name %>
<%= t('devise.shared.hello') %> <%= @resource.email %>!

<%= t('devise.mailers.reset_password_instructions.requested_password_change_with_provider', provider: provider_name) %>.

<%= t('devise.mailers.reset_password_instructions.check_with_support_provider', provider: provider_name) %>

<%= t('devise.mailers.reset_password_instructions.if_not_requesting') %>
<% end %>
<%= t("user_mailer.shared.text_contact_prodesk") if @application.try(:name) == 'CONTRACTOR_PORTAL' %>